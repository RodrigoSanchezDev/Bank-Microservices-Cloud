{
	"info": {
		"_postman_id": "bank-microservices-cloud",
		"name": "Bank Microservices Cloud API",
		"description": "Colección de Postman para probar la API del sistema bancario con microservicios",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8081",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set('token', jsonData.token);",
									"    console.log('Token guardado: ' + jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "login"]
						},
						"description": "Obtener token JWT para autenticación"
					},
					"response": []
				}
			]
		},
		{
			"name": "Accounts",
			"item": [
				{
					"name": "Get All Accounts",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/accounts",
							"host": ["{{baseUrl}}"],
							"path": ["api", "accounts"]
						},
						"description": "Obtener todas las cuentas bancarias"
					},
					"response": []
				},
				{
					"name": "Get Account by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/accounts/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "accounts", "1"]
						},
						"description": "Obtener cuenta por ID"
					},
					"response": []
				},
				{
					"name": "Create Account",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"accountNumber\": \"1234567890\",\n  \"accountHolder\": \"Juan Pérez\",\n  \"balance\": 1000.00,\n  \"accountType\": \"SAVINGS\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/accounts",
							"host": ["{{baseUrl}}"],
							"path": ["api", "accounts"]
						},
						"description": "Crear nueva cuenta bancaria"
					},
					"response": []
				},
				{
					"name": "Update Account",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"accountNumber\": \"1234567890\",\n  \"accountHolder\": \"Juan Pérez Actualizado\",\n  \"balance\": 1500.00,\n  \"accountType\": \"CHECKING\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/accounts/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "accounts", "1"]
						},
						"description": "Actualizar cuenta existente"
					},
					"response": []
				},
				{
					"name": "Delete Account",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/accounts/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "accounts", "1"]
						},
						"description": "Eliminar cuenta (soft delete)"
					},
					"response": []
				}
			]
		},
		{
			"name": "Health & Monitoring",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/actuator/health",
							"host": ["{{baseUrl}}"],
							"path": ["actuator", "health"]
						},
						"description": "Verificar estado del servicio"
					},
					"response": []
				},
				{
					"name": "Circuit Breaker Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/actuator/health/circuitbreakers",
							"host": ["{{baseUrl}}"],
							"path": ["actuator", "health", "circuitbreakers"]
						},
						"description": "Ver estado del Circuit Breaker"
					},
					"response": []
				},
				{
					"name": "Metrics",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/actuator/metrics",
							"host": ["{{baseUrl}}"],
							"path": ["actuator", "metrics"]
						},
						"description": "Ver métricas del servicio"
					},
					"response": []
				}
			]
		}
	]
}
